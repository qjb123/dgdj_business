<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="customTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">

    </style>

    <style name="shareDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="DialogAnimation">
        <item name="@android:activityOpenEnterAnimation">@anim/push_up_in</item>
        <item name="@android:activityOpenExitAnimation">@anim/push_up_out</item>
        <item name="@android:activityCloseEnterAnimation">@anim/push_up_in</item>
        <item name="@android:activityCloseExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="textDarkStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_title_second</item>
    </style>

    <style name="textWhiteStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_title_second</item>
    </style>

    <style name="textGrayStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/font_size_title_second</item>
    </style>

    <style name="calendarTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tabTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="base_listview_style" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarThumbVertical">@drawable/base_list_scrollbar_handle</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:listSelector">@drawable/base_list_selector</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0dip</item>
    </style>

    <style name="base_large_progressbar_style">
        <item name="android:maxWidth">38.0dip</item>
        <item name="android:maxHeight">38.0dip</item>
        <item name="android:indeterminateDrawable">@anim/base_loading_large_anim</item>
        <item name="android:minWidth">38.0dip</item>
        <item name="android:minHeight">38.0dip</item>
    </style>
</resources>
